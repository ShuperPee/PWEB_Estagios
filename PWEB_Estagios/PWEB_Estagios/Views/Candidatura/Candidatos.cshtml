@model IEnumerable<PWEB_Estagios.Models.Aluno>

@{
    ViewBag.Title = "Candidatos";
}

<h2>Candidatos</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PrimeiroNome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apelido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroAluno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroCadeirasConcluidas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Media)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PrimeiroNome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apelido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroAluno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroCadeirasConcluidas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Media)
        </td>
    </tr>
}

</table>
