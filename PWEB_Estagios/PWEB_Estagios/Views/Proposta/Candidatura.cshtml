@model PWEB_Estagios.Models.CandidaturaProposta

@{
    ViewBag.Title = "Candiatura";
}

<h2>Candiatura</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>CandidaturaProposta</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.PropostasSelect, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownList("PropostasSelect", (SelectList)ViewBag.Propostas, "Selecione Proposta", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

