@model IEnumerable<PWEB_Estagios.Models.Docente>

@{
    ViewBag.Title = "ListarDocentes";
}

<h2>ListarDocentes</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PrimeiroNome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apelido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroDocente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comisao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroMaxCandidaturas)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PrimeiroNome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apelido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroDocente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comisao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroMaxCandidaturas)
        </td>
        <td>
            @Html.ActionLink("<Adicionar a Comissão>", "AddComissao", new { docenteId = item.DocenteId })
        </td>
        <td>
            @Html.ActionLink("<Remover da Comissão>", "RemoveComissao", new { docenteId = item.DocenteId })
        </td>
    </tr>
}

</table>
